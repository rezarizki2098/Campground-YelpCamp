<% layout('/layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" value="<%= campground.title %>" name="campground[title]" required />
                <div class="invalid-feedback">Judul tidak boleh kosong.</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" value="<%= campground.location %>" name="campground[location]" required />
                <div class="invalid-feedback">Lokasi tidak boleh kosong.</div>
                <!-- ? name="campground[location]" ini cara baru yang mana data input akan di letakkan di dalam objek campground -->
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price-label">Rp.</span>
                    <input
                        type="text"
                        class="form-control"
                        placeholder="0"
                        aria-label="price"
                        aria-describedby="price-label"
                        id="price"
                        value="<%= campground.price %>"
                        name="campground[price]"
                        required />
                    <div class="invalid-feedback">Harga tidak boleh kosong.</div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="campground[description]" required><%= campground.description %></textarea>
                <div class="invalid-feedback">Deskripsi tidak boleh kosong.</div>
            </div>
            <div class="mb-3">
                <label for="formFile" class="form-label">Add Images</label>
                <input class="form-control" type="file" id="formFile" name="image" multiple />
            </div>
            <div class="mb-3">
                <% campground.image.forEach((img,i)=>{ %>
                <img src="<%= img.thumbnail %>" alt="" class="img-thumbnail" />
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>" />
                    <label for="">Delete</label>
                </div>
                <% }) %>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Campground</button>
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id %>">Cancel</a>
    </div>
</div>

